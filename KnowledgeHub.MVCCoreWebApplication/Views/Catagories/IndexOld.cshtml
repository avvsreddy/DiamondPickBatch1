@model List<KnowledgeHub.Entities.Catagory>
@{
    ViewData["Title"] = "Index";
}

<h1>List of Catagories</h1>
<hr />

<h3>Catagories Count : @Model.Count</h3>  

<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>Catagory Name</th>
            <th>Catagory Description</th>
            <th>Action</th>
        </tr>
    </thead>
    @foreach (var c in Model)
   {
       <tr>
           <td>@c.CatagoryName</td>
           <td>@c.CatagoryDescription</td>
           <td>

               <a asp-action=Delete asp-controller=Catagories asp-route-id=@c.CatagoryID class="btn btn-danger">Delete</a> 
               <a asp-action=Edit asp-controller=Catagories asp-route-id=@c.CatagoryID class="btn btn-info">Edit</a> 


           </td>
       </tr>
   }


</table>

